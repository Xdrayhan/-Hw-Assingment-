#include<stdio.h>
void main()
{
    int a,i;
    int sum=0;
    printf("enter a number: ");
    scanf("%d",&a);
    if(a<0)
    {
        for(i=-2; i>=a; i--)
        {
            sum=sum+i;
        }
        printf("%d is the result",sum);
    }
    else
    {
        for(i=1; i<=a; i++)
        {
            sum+=i;
        }
        printf("%d is the result",sum);
    }

}
